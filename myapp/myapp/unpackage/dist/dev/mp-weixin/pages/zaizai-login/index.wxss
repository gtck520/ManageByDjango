
.zai-box{
	padding: 0 100rpx;
	position: relative;
}
.zai-logo{
	width: 100%;
	width: 100%;
	height: 310rpx;
}
.zai-title{
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
	width: 100%;
	margin-left: -100rpx;
}
.zai-form{
	margin-top: 300rpx;
}
.zai-input{
	background: #e2f5fc;
	margin-top: 30rpx;
	-webkit-border-radius: 100rpx;
	        border-radius: 100rpx;
	padding: 10rpx 20rpx;
	font-size: 12px;
}
.input-placeholder, .zai-input{
	color: #94afce;
}
.zai-label{
	padding: 60rpx 0;
	text-align: center;
	font-size: 30rpx;
	color: #a7b6d0;
}
.zai-btn{
	background: #ff65a3;
	color: #fff;
	border: 0;
	-webkit-border-radius: 100rpx;
	        border-radius: 100rpx;
	font-size: 36rpx;
}
.zai-btn:after{
	border: 0;
}
/*按钮点击效果*/
.zai-btn.button-hover{
	-webkit-transform: translate(1rpx, 1rpx);
	    -ms-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

